<Gauge Name="PO-500 switch" Version="1.0">
   <Element>
      <Position X="0" Y="0"/>
      <Select>
         <Value>(L:PO500, bool)</Value>
         <Case Value="0">
            <Image Name="sw_d_pk.bmp" ImageSizes="48,120,0,0"/>
         </Case>
         <Case Value="1">
            <Image Name="sw_u_pk.bmp" ImageSizes="48,120,0,0"/>
         </Case>
      </Select>
   </Element>
   <Element>
      <Position X="0" Y="0"/>
      <Select>
         <Value>(L:PO500, bool) (G:Var1) ! &amp;&amp; if{ 1 (>G:Var1) } (G:Var1)</Value>
         <Case Value="0">
            <Image Name="sw_b_dn.bmp" ImageSizes="48,120,0,0"/>
         </Case>
         <Case Value="1">
            <Image Name="sw_b_op.bmp" ImageSizes="48,120,0,0"/>
         </Case>
      </Select>
   </Element>
   <Mouse>
         <Cursor Type="Hand"/>
            <Click Kind="LeftSingle+RightSingle">
            (M:Event) 'LeftSingle' scmp 0 == (G:Var1) &amp;&amp; if{ (L:PO500, bool) ! (>L:PO500, bool) 0 (>K:TOGGLE_AFTERBURNER1) }
            (M:Event) 'RightSingle' scmp 0 == if{ (G:Var1) ! (>G:Var1) 0 (>L:PO500, bool) 0 (>K:TOGGLE_AFTERBURNER2) }
           </Click>
    </Mouse>
</Gauge>
